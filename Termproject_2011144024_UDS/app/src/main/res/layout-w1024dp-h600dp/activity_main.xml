<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/game_background"
        android:layout_width="530dp"
        android:layout_height="530dp"
        android:background="@drawable/board5">

        <ImageView
            android:id="@+id/game_player"
            android:layout_width="53dp"
            android:layout_height="53dp"
            android:background="#77ffffff"
            android:src="@drawable/player1"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/game_target"
            android:layout_width="53dp"
            android:layout_height="53dp"
            android:background="#77ffffff"
            android:src="@drawable/player2"
            android:visibility="gone"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_margin="20dp">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:id="@+id/dip_status_1_on"
                android:src="@drawable/status1"
                android:visibility="gone"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:id="@+id/dip_status_1_off"
                android:src="@drawable/status0"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:id="@+id/dip_status_2_on"
                android:src="@drawable/status2"
                android:visibility="gone"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:id="@+id/dip_status_2_off"
                android:src="@drawable/status0"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:id="@+id/dip_status_3_on"
                android:src="@drawable/status3"
                android:visibility="gone"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:id="@+id/dip_status_3_off"
                android:src="@drawable/status0"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:id="@+id/dip_status_4_on"
                android:src="@drawable/status4"
                android:visibility="gone"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:id="@+id/dip_status_4_off"
                android:src="@drawable/status0"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:id="@+id/dip_status_5_on"
                android:src="@drawable/status5"
                android:visibility="gone"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:id="@+id/dip_status_5_off"
                android:src="@drawable/status0"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:id="@+id/dip_status_6_on"
                android:src="@drawable/status6"
                android:visibility="gone"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:id="@+id/dip_status_6_off"
                android:src="@drawable/status0"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:id="@+id/dip_status_7_on"
                android:src="@drawable/status7"
                android:visibility="gone"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:id="@+id/dip_status_7_off"
                android:src="@drawable/status0"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:id="@+id/dip_status_8_on"
                android:src="@drawable/status8"
                android:visibility="gone"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:id="@+id/dip_status_8_off"
                android:src="@drawable/status0"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical"
            android:layout_alignParentBottom="true">

            <ImageButton
                android:id="@+id/start_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:src="@drawable/start_btn"
                android:background="@android:color/transparent"
                android:layout_marginBottom="20dp"/>

            <ImageButton
                android:id="@+id/give_up_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:src="@drawable/give_up_btn"
                android:background="@android:color/transparent"
                android:layout_marginBottom="20dp"
                android:visibility="gone"/>

            <ImageButton
                android:id="@+id/hint_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:src="@drawable/hint_btn"
                android:background="@android:color/transparent" />

        </LinearLayout>

    </RelativeLayout>
</LinearLayout>