<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/shape_list">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="중력"
            android:textSize="18sp"
            android:gravity="center"
            android:background="#55ff0000"/>

        <TextView
            android:id="@+id/x_gravity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/y_gravity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/z_gravity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/shape_list">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="가속도"
            android:textSize="18sp"
            android:gravity="center"
            android:background="#554CAF50"/>

        <TextView
            android:id="@+id/x_accelerometer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/y_accelerometer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/z_accelerometer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/shape_list">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="직선 가속도"
            android:textSize="18sp"
            android:gravity="center"
            android:background="#550000ff"/>

        <TextView
            android:id="@+id/x_linear_accelerometer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/y_linear_accelerometer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/z_linear_accelerometer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/shape_list">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="자이로스코프"
            android:textSize="18sp"
            android:gravity="center"
            android:background="#55FFEB3B"/>

        <TextView
            android:id="@+id/x_gyroscope"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/y_gyroscope"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/z_gyroscope"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>