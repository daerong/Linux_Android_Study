<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/game_background"
        android:layout_width="600dp"
        android:layout_height="match_parent"
        android:background="@drawable/board5">

        <ImageView
            android:id="@+id/game_player"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="#77ffffff"
            android:src="@drawable/player1" />

        <ImageView
            android:id="@+id/game_target"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="#77ffffff"
            android:src="@drawable/player2" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/my_ptr_state"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="여기에 프록그램 상태가 표시 됨!"/>

        <EditText
            android:id="@+id/my_ptr_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "/>

    </LinearLayout>




</LinearLayout>